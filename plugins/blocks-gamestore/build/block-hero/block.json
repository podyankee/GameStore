{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "blocks-gamestore/block-hero",
  "version": "0.1.0",
  "title": "Hero Block",
  "category": "widgets",
  "icon": "smiley",
  "description": "Block Hero",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "source": "html",
      "selector": ".hero-title"
    },
    "description": {
      "type": "string",
      "source": "html",
      "selector": ".hero-description"
    },
    "link": {
      "type": "string",
      "source": "attribute",
      "selector": "a",
      "attribute": "href"
    },
    "linkAnkor": {
      "type": "string",
      "source": "html",
      "selector": "a"
    },
    "video": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "isVideo": {
      "type": "boolean"
    },
    "slides": {
      "type": "array",
      "default": []
    }
  },
  "textdomain": "blocks-gamestore",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}